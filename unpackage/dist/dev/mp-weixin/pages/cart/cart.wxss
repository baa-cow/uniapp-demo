page {
  background-color: #eee;
}
.cart {
  background-color: #eee;
}
.cart .cart-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 20rpx;
  height: 260rpx;
  background-color: #fff;
}
.cart .cart-item image {
  width: 300rpx;
  height: 100%;
}
.cart .cart-item .card-info {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding-left: 10rpx;
}
.cart .cart-item .card-info text {
  display: block;
}
.cart .cart-item .card-info .changeNo text {
  line-height: 40rpx;
  text-align: center;
  width: 45rpx;
  height: 45rpx;
  display: inline-block;
}
.cart .cart-item .card-info .changeNo #des,
.cart .cart-item .card-info .changeNo #add {
  border-radius: 20%;
  background-color: #eee;
}
.cart .btn {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 90rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart .btn text {
  line-height: 90rpx;
  height: 100%;
}
.cart .btn .button {
  display: inline-block;
  text-align: center;
  width: 100rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10%;
  background-color: #f40;
  margin: 0 20rpx;
}

